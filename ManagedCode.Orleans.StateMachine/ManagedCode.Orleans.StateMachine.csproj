<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <LangVersion>11</LangVersion>
        <OutputType>Library</OutputType>
        <Nullable>enable</Nullable>
        <IsPackable>true</IsPackable>
    </PropertyGroup>

    <!--NuGet-->
    <PropertyGroup>
        <Title>ManagedCode.Orleans.StateMachine</Title>
        <PackageId>ManagedCode.Orleans.StateMachine</PackageId>
        <Description>StateMachine implementation on Orleans</Description>
        <PackageTags>managedcode, orleans</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="7.0.0" />
        <PackageReference Include="Microsoft.Orleans.Sdk" Version="7.1.2" />
        <PackageReference Include="Microsoft.Orleans.Serialization.Abstractions" Version="7.1.2" />
        <PackageReference Include="Stateless" Version="5.13.0" />
    </ItemGroup>

</Project>
